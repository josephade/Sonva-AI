{
  "compilerOptions": {
    /* ==============================
       ‚öôÔ∏è CORE SETTINGS
       ============================== */
    "target": "ES2022",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "types": ["three"],
    /* ==============================
       üí° MODULE + JSX
       ============================== */
    "module": "esnext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    /* ==============================
       üß† STRICTNESS + CHECKS
       ============================== */
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "noEmit": true,
    "incremental": true,
    /* ==============================
       üß≠ PATH ALIASES
       ============================== */
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    /* ==============================
       üß© NEXT.JS PLUGIN
       ============================== */
    "plugins": [
      {
        "name": "next"
      }
    ],
    "allowJs": true
  },
  /* ==============================
     üßæ INCLUDED FILES
     ============================== */
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts"
  ],
  /* ==============================
     üö´ EXCLUDED FOLDERS
     ============================== */
  "exclude": [
    "node_modules"
  ]
}
